machine:
    kubelet:
        extraArgs:
          rotate-server-certificates: true
          max-pods: 80
        extraMounts:
          - destination: /var/lib/longhorn
            type: bind
            source: /var/lib/longhorn
            options:
              - bind
              - rshared
              - rw
          - destination: /opt/local
            type: bind
            source: /opt/local
            options:
              - bind
              - rshared
              - rw
#    install:
#      image: factory.talos.dev/installer/c527b6b20fb22847304656677e9bd4c4055dfcce95f3385da5db80e35f5fa1dc:v1.6.5

    nodeLabels:
      minio: node
    files:
      - content: |
          [metrics]
            address = "0.0.0.0:11234"
        path: /var/cri/conf.d/metrics.toml
        op: create

    # Provides machine specific network configuration options.
    network:
      hostname: k1w1
      interfaces:
        - interface: eth0 # The interface name.
          addresses:
            - 172.22.1.15/24
          routes:
            - network: 0.0.0.0/0 # The route's network (destination).
              gateway: 172.22.1.254 # The route's gateway (if empty, creates link scope route).
      nameservers:
       - 8.8.8.8
       - 168.95.1.1
    registries:
      mirrors:
        "172.22.1.11:5000":
           endpoints:
             - http://172.22.1.11:5000
      config:
        "172.22.1.11:5000":
            tls:
               insecureSkipVerify: true
cluster:
    network:
        dnsDomain: k1.org # The domain used by Kubernetes DNS.
        # The pod subnet CIDR.
        podSubnets:
            - 10.244.0.0/16
        # The service subnet CIDR.
        serviceSubnets:
            - 10.98.0.0/24
    proxy:
        mode: ipvs
        extraArgs:
          ipvs-strict-arp: true
